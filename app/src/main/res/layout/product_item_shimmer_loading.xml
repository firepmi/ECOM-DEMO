<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <View
        android:id="@+id/viewPricePlaceholder"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@color/loading_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewOrignalPricePlaceholder"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/loading_gray"
        app:layout_constraintEnd_toEndOf="@+id/viewPricePlaceholder"
        app:layout_constraintStart_toStartOf="@+id/viewPricePlaceholder"
        app:layout_constraintTop_toBottomOf="@+id/viewPricePlaceholder" />

    <View
        android:id="@+id/viewCategoryPlaceholder"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_10sdp"
        android:background="@color/loading_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewPricePlaceholder" />

    <View
        android:id="@+id/viewAvatarPlaceholder"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/loading_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewOrignalPricePlaceholder" />

    <View
        android:id="@+id/viewLine1Placeholder"
        android:layout_width="0dp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@color/loading_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/viewAvatarPlaceholder"
        app:layout_constraintTop_toTopOf="@+id/viewAvatarPlaceholder" />

</androidx.constraintlayout.widget.ConstraintLayout>